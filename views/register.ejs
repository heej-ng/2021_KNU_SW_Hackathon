<!DOCTYPE html>
<html lang="en">
    <%-include('layouts/header')-%>
    <body>
        <!-- Navigation-->
        <%-include('layouts/navbar_white')-%>

        <!-- Header-->
        <header class="py-4" style="background-color: #4a6375">
            <div class="container px-4 px-lg-5 my-5">
                <div class="text-center text-white">
                    <h1 class="display-4 fw-bolder">SIGN UP</h1>
                    <p class="lead fw-normal text-white-50 mb-0">Thank you for join us</p>
                </div>
            </div>
        </header>

        <!-- Section-->
        <div class="container">
            <div class="row" style="margin-top: 9px;">
              <div class="col-lg-6 col-md-8 mx-auto my-5">        
                <!-- for browser to know tha tthe form contains mutli media. will encripy multie media and send to server -->
                <form action="/users/register" method="POST">
                  <div class="control-group">
                    <div class="form-group floating-label-form-group controls">
                      <label>아이디</label>
                      <input type="text" class="form-control" placeholder="아이디를 입력하세요" id="name" name="name">              
                    </div>
                  </div>
                  <br>
                  <div class="control-group">
                    <div class="form-group floating-label-form-group controls">
                      <label>비밀번호</label>
                      <input type="password" class="form-control" placeholder="비밀번호를 입력하세요" id="password" name="password">              
                    </div>
                  </div>
                  <br>
                  <div class="control-group">
                    <div class="form-group floating-label-form-group controls">
                      <label>학번</label>
                      <input type="text" class="form-control" placeholder="학번을 입력하세요" id="id" name="id">              
                    </div>
                  </div>
                  <br>
                  <div class="control-group">
                    <div class="form-group floating-label-form-group controls">
                      <label>학과</label>
                      <input type="text" class="form-control" placeholder="학과를 입력하세요" id="department" name="department">              
                    </div>
                  </div>
        
                  <br/>
                  <div class="form-group mb-5" style="text-align: right;">
                    <button type="submit" class="btn" style="background-color: #4a6375; color: white">가입하기</button>
                </div>
                </form>
              </div>
            </div>
        </div>
        <!-- Footer-->
        <%-include('layouts/footer')-%>
        <%- include('layouts/script')-%>
    </body>
</html>
